<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:minHeight="40dip"
        android:orientation="horizontal"
        android:paddingStart="12dip"
        android:paddingEnd="12dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="February 2026"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Day-of-week labels -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dip"
        android:paddingBottom="4dip">

        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:textColor="@color/month_day_names_color" android:text="SU" />
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:textColor="@color/month_day_names_color" android:text="MO" />
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:textColor="@color/month_day_names_color" android:text="TU" />
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:textColor="@color/month_day_names_color" android:text="WE" />
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:textColor="@color/month_day_names_color" android:text="TH" />
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:textColor="@color/month_day_names_color" android:text="FR" />
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:textColor="@color/month_day_names_color" android:text="SA" />
    </LinearLayout>

    <!-- Week 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="1" android:textColor="@color/month_day_number" />
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="2" android:textColor="@color/month_day_number" />
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="3" android:textColor="@color/month_day_number" />
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="4" android:textColor="@color/month_day_number" />
        <!-- Day 5 with event -->
        <LinearLayout android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:gravity="center" android:textSize="11sp"
                android:text="5" android:textColor="@color/month_day_number" />
            <TextView android:layout_width="match_parent" android:layout_height="11dip"
                android:layout_marginTop="1dip" android:layout_marginStart="1dip"
                android:layout_marginEnd="1dip" android:background="@color/colorAccent"
                android:text="Gym" android:textSize="8sp" android:textColor="@android:color/white"
                android:maxLines="1" android:gravity="center_vertical"
                android:paddingStart="2dip" android:paddingEnd="1dip" />
        </LinearLayout>
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="6" android:textColor="@color/month_day_number" />
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="7" android:textColor="@color/month_day_number" />
    </LinearLayout>

    <!-- Week 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="8" android:textColor="@color/month_day_number" />
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="9" android:textColor="@color/month_day_number" />
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="10" android:textColor="@color/month_day_number" />
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="11" android:textColor="@color/month_day_number" />
        <!-- Day 12 with two events -->
        <LinearLayout android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:gravity="center" android:textSize="11sp"
                android:text="12" android:textColor="@color/month_day_number" />
            <TextView android:layout_width="match_parent" android:layout_height="11dip"
                android:layout_marginTop="1dip" android:layout_marginStart="1dip"
                android:layout_marginEnd="1dip" android:background="#FF4285F4"
                android:text="Meeting" android:textSize="8sp" android:textColor="@android:color/white"
                android:maxLines="1" android:gravity="center_vertical"
                android:paddingStart="2dip" android:paddingEnd="1dip" />
            <TextView android:layout_width="match_parent" android:layout_height="11dip"
                android:layout_marginTop="1dip" android:layout_marginStart="1dip"
                android:layout_marginEnd="1dip" android:background="#FFEA4335"
                android:text="Lunch" android:textSize="8sp" android:textColor="@android:color/white"
                android:maxLines="1" android:gravity="center_vertical"
                android:paddingStart="2dip" android:paddingEnd="1dip" />
        </LinearLayout>
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="13" android:textColor="@color/month_day_number" />
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="14" android:textColor="@color/month_day_number" />
    </LinearLayout>

    <!-- Week 3 (today = 19) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="15" android:textColor="@color/month_day_number" />
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="16" android:textColor="@color/month_day_number" />
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="17" android:textColor="@color/month_day_number" />
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="18" android:textColor="@color/month_day_number" />
        <!-- Day 19: today -->
        <FrameLayout android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center">
            <TextView android:layout_width="20dip" android:layout_height="20dip"
                android:layout_gravity="center" android:gravity="center"
                android:textSize="11sp" android:text="19"
                android:textColor="@android:color/white"
                android:background="@drawable/month_widget_today_circle" />
        </FrameLayout>
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="20" android:textColor="@color/month_day_number" />
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="21" android:textColor="@color/month_day_number" />
    </LinearLayout>

    <!-- Week 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="22" android:textColor="@color/month_day_number" />
        <!-- Day 23 with event -->
        <LinearLayout android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:gravity="center" android:textSize="11sp"
                android:text="23" android:textColor="@color/month_day_number" />
            <TextView android:layout_width="match_parent" android:layout_height="11dip"
                android:layout_marginTop="1dip" android:layout_marginStart="1dip"
                android:layout_marginEnd="1dip" android:background="#FF34A853"
                android:text="Dentist" android:textSize="8sp" android:textColor="@android:color/white"
                android:maxLines="1" android:gravity="center_vertical"
                android:paddingStart="2dip" android:paddingEnd="1dip" />
        </LinearLayout>
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="24" android:textColor="@color/month_day_number" />
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="25" android:textColor="@color/month_day_number" />
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="26" android:textColor="@color/month_day_number" />
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="27" android:textColor="@color/month_day_number" />
        <TextView android:layout_width="0dip" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center" android:textSize="11sp"
            android:text="28" android:textColor="@color/month_day_number" />
    </LinearLayout>

</LinearLayout>
