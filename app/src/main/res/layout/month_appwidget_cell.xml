<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/month_cell_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Main cell content -->
    <LinearLayout
        android:id="@+id/month_cell_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="1dip"
        android:paddingBottom="1dip">

        <!-- Day number -->
        <TextView
            android:id="@+id/month_cell_day"
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:gravity="center"
            android:textSize="11sp" />

        <!-- Event chip row 1 -->
        <LinearLayout
            android:id="@+id/month_cell_event_row_1"
            android:layout_width="match_parent"
            android:layout_height="11dip"
            android:layout_marginTop="1dip"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/month_cell_event_bar_1"
                android:layout_width="3dip"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <TextView
                android:id="@+id/month_cell_event_text_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="8sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingStart="2dip"
                android:paddingEnd="1dip" />
        </LinearLayout>

        <!-- Event chip row 2 -->
        <LinearLayout
            android:id="@+id/month_cell_event_row_2"
            android:layout_width="match_parent"
            android:layout_height="11dip"
            android:layout_marginTop="1dip"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/month_cell_event_bar_2"
                android:layout_width="3dip"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <TextView
                android:id="@+id/month_cell_event_text_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="8sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingStart="2dip"
                android:paddingEnd="1dip" />
        </LinearLayout>

        <!-- Event chip row 3 -->
        <LinearLayout
            android:id="@+id/month_cell_event_row_3"
            android:layout_width="match_parent"
            android:layout_height="11dip"
            android:layout_marginTop="1dip"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/month_cell_event_bar_3"
                android:layout_width="3dip"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <TextView
                android:id="@+id/month_cell_event_text_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="8sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingStart="2dip"
                android:paddingEnd="1dip" />
        </LinearLayout>

        <!-- Overflow indicator (e.g. "+2 more") -->
        <TextView
            android:id="@+id/month_cell_overflow"
            android:layout_width="match_parent"
            android:layout_height="11dip"
            android:layout_marginStart="1dip"
            android:layout_marginEnd="1dip"
            android:textSize="7sp"
            android:maxLines="1"
            android:gravity="center"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Right grid line border -->
    <TextView
        android:id="@+id/month_cell_border_right"
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:layout_gravity="end" />

    <!-- Bottom grid line border -->
    <TextView
        android:id="@+id/month_cell_border_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_gravity="bottom" />
</FrameLayout>
