<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/week_widget_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header with week date range title -->
    <LinearLayout
        android:id="@+id/week_widget_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="40dip"
        android:orientation="horizontal"
        android:paddingStart="12dip"
        android:paddingEnd="12dip">

        <TextView
            android:id="@+id/week_widget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Day-of-week labels row -->
    <LinearLayout
        android:id="@+id/week_dow_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dip"
        android:paddingBottom="4dip">

        <TextView
            android:id="@+id/week_dow_0"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/week_dow_1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/week_dow_2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/week_dow_3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/week_dow_4"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/week_dow_5"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/week_dow_6"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="11sp" />
    </LinearLayout>

    <!-- Grid of day cells (1 row x 7 days) -->
    <GridView
        android:id="@+id/week_grid"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:numColumns="7"
        android:scrollbars="none"
        android:stretchMode="columnWidth" />
</LinearLayout>
